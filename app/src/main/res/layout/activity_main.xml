<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/question_mark_blur"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_one"
                android:textColor="#000"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/question_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/one_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_one_option_one"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/one_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_one_option_two"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/one_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_one_option_three"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/one_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_one_option_four"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/answer_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/question_two"
                android:textColor="#000"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/question_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/two_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_two_option_one"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/two_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_two_option_two"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/two_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_two_option_three"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/two_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_two_option_four"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/answer_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/question_three"
                android:textColor="#000"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/question_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/three_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_three_option_one"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/three_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_three_option_two"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/three_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_three_option_three"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/three_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_three_option_four"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/answer_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/question_four"
                android:textColor="#000"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/question_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/four_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_four_option_one"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/four_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_four_option_two"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/four_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_four_option_three"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/four_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_four_option_four"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/answer_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/question_five"
                android:textColor="#000"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/question_five"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A."
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/hercule_poirot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="check"
                        android:paddingLeft="8dp"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/hercule_poirot" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="B."
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/sherlock_holmes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="check"
                        android:paddingLeft="8dp"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/sherlock_holmes" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C."
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/bruce_wayne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="check"
                        android:paddingLeft="8dp"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/bruce_wayne" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="D."
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/joe_hardy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="check"
                        android:paddingLeft="8dp"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/joe_hardy" />
                </LinearLayout>
            </RadioGroup>

            <TextView
                android:id="@+id/answer_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/question_six"
                android:textColor="#000"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/question_six"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/six_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_six_option_one"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/six_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_six_option_two"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/six_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_six_option_three"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/six_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="@string/question_six_option_four"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/answer_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/question_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/question_seven"
                android:textColor="#000"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/seven_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="@string/question_seven_option_one"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/seven_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="@string/question_seven_option_two"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/seven_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="@string/question_seven_option_three"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/seven_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="@string/question_seven_option_four"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/answer_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/question_eight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/question_eight"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/question_eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="YYYY"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/answer_eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp" />

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="32dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_red_dark"
            android:onClick="reset"
            android:text="reset"
            android:textAllCaps="true"
            android:textColor="@android:color/white" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="64dp"
            android:layout_weight="1"
            android:onClick="submit"
            android:text="submit"
            android:textAllCaps="true" />

    </LinearLayout>


</LinearLayout>